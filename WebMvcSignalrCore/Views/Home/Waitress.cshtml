@model IEnumerable<FoodOrderSignalrCore.Models.FoodOrder>

@{
    ViewData["Title"] = "Waitress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Waitress Sections For Delivering the Food</h1>

<script>
    /**
     * Setup the connection
     */
    var connection = new signalR.HubConnectionBuilder()
        .withUrl("/foodhub")
        .configureLogging(signalR.LogLevel.Trace)
        .build();   

    $(document).ready(function () {
        connection.start().then(() => {
            connection.invoke("JoinRoom", "Waitress Receiver", "Waitress").catch(err => console.error(err.toString()));
        });
    });
</script>

